<Application
    x:Class="Mikodev.Mines.Viewer.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Styles>
    <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
    <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml" />
  </Application.Styles>
  <Application.Resources>
    <Pen x:Key="Mines.Drawing.Mine.Pen" Brush="Black" Thickness="4" LineCap="Round" />
    <DrawingGroup x:Key="Mines.Drawing.Mine">
      <GeometryDrawing Brush="Black">
        <EllipseGeometry Rect="6,6,20,20" />
      </GeometryDrawing>
      <GeometryDrawing Pen="{StaticResource Mines.Drawing.Mine.Pen}">
        <LineGeometry StartPoint="16,5" EndPoint="16,27" />
      </GeometryDrawing>
      <GeometryDrawing Pen="{StaticResource Mines.Drawing.Mine.Pen}">
        <LineGeometry StartPoint="5,16" EndPoint="27,16" />
      </GeometryDrawing>
      <GeometryDrawing Pen="{StaticResource Mines.Drawing.Mine.Pen}">
        <LineGeometry StartPoint="8.22,8.22" EndPoint="23.78,23.78" />
      </GeometryDrawing>
      <GeometryDrawing Pen="{StaticResource Mines.Drawing.Mine.Pen}">
        <LineGeometry StartPoint="8.22,23.78" EndPoint="23.78,8.22" />
      </GeometryDrawing>
    </DrawingGroup>
  </Application.Resources>
</Application>
