<Window
    x:Class="Mikodev.Mines.Viewer.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Mines" MinWidth="640" MinHeight="320"
    d:DesignWidth="640" d:DesignHeight="320" mc:Ignorable="d">
  <Grid>
    <Grid ColumnDefinitions="* 16 Auto" Margin="16" VerticalAlignment="Center">
      <Viewbox x:Name="viewer" Grid.Column="0" />
      <Grid Grid.Column="2" RowDefinitions="Auto * Auto" Width="240">
        <StackPanel Grid.Row="0">
          <TextBlock x:Name="marker" />
          <TextBlock x:Name="ticker" />
          <TextBlock x:Name="banner" />
        </StackPanel>
        <Grid Grid.Row="2" RowDefinitions="Auto 8 Auto">
          <Button x:Name="reopen" Grid.Row="0">New Game</Button>
          <Button x:Name="remove" Grid.Row="2">Auto Remove</Button>
        </Grid>
      </Grid>
    </Grid>
  </Grid>
</Window>
