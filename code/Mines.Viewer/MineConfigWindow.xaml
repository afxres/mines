<Window
    x:Class="Mikodev.Mines.Viewer.MineConfigWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Configuration" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
    d:DesignHeight="320" d:DesignWidth="160" mc:Ignorable="d">
  <Grid>
    <Grid RowDefinitions="Auto 8 Auto 8 Auto" Margin="16">
      <Grid Grid.Row="0" ColumnDefinitions="Auto 8 120" RowDefinitions="Auto 8 Auto 8 Auto">
        <Label Grid.Column="0" Grid.Row="0" Content="Width" Target="x" />
        <TextBox x:Name="x" Grid.Column="2" Grid.Row="0" />
        <Label Grid.Column="0" Grid.Row="2" Content="Height" Target="y" />
        <TextBox x:Name="y" Grid.Column="2" Grid.Row="2" />
        <Label Grid.Column="0" Grid.Row="4" Content="Mine Count" Target="count" />
        <TextBox x:Name="count" Grid.Column="2" Grid.Row="4" />
      </Grid>
      <Button x:Name="accept" Grid.Row="2" Content="Accept" />
      <Button x:Name="cancel" Grid.Row="4" Content="Cancel" />
    </Grid>
  </Grid>
</Window>
